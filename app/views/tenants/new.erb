<form action="/tenants" method="post">

<label>Name:</label>
<input type="text" name="tenant[name]">

<label>Apartment:</label>
<select name="tenant[apartment_id]">
    <option disabled selected value> -- select an option -- </option>
    <% @apartments.each do |apt| %>
        <option value=<%= apt.id%> >
            <%= apt.address %>
        </option>
    <% end %>
</select>

<input type="submit" />
</form>